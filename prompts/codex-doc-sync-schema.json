{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Doc Sync Output",
  "type": "object",
  "required": [
    "summary",
    "changes_committed",
    "updated_files",
    "follow_ups"
  ],
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "string",
      "description": "Short summary of whether docs were updated and why."
    },
    "changes_committed": {
      "type": "boolean",
      "description": "True when documentation updates were staged, committed, and pushed in this run."
    },
    "updated_files": {
      "type": "array",
      "description": "Documentation files touched by Codex.",
      "items": {
        "type": "string"
      }
    },
    "follow_ups": {
      "type": "array",
      "description": "Optional backlog items for docs that cannot be updated automatically.",
      "items": {
        "type": "object",
        "required": [
          "description",
          "owner_hint"
        ],
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string",
            "description": "What work remains."
          },
          "owner_hint": {
            "type": "string",
            "description": "Optional pointer to the best owner or area."
          }
        }
      }
    }
  }
}
